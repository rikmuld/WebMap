themeblue = #0f94db

.noselect
    user-select: none

html, body
    margin 0

div, input
    box-sizing border-box

a, a:hover, a:focus, a:active
    text-decoration none !important

#map 
    height 100%
    width 100%
    position absolute
    top 0
    z-index -1

.mapElement
    background-color: white
    border-radius: 2px
    box-shadow: rgba(0, 0, 0, 0.3) 0px 1px 4px -1px

#myLocation
    @extends .mapElement

    width 28px
    height 28px
    margin-bottom 10px
    margin-left 10px
    cursor: pointer

    img
        width 22px
        height 22px
        margin 3px 0px 0px 3px
        object-fit cover
        object-position 0 0

#myLocation:hover
    img
        object-position 88.7% 0

#myLocation.error
    cursor default
    img
        object-position 11.04% 0

#searchbar
    @extends .mapElement

    width 310px
    height 48px
    margin-top 10px
    left 80px
    z-index 100

    input, input:focus, input:active, input:hover
        width 100%
        height 100%
        border none
        outline none
        padding 10px
        font-size 15px
        font-family: Arial, Helvetica, sans-serif
        border-radius: inherit

addIconSize = 59px

#addIcon
    margin-right 10px
    margin-bottom 10px
    width addIconSize
    height addIconSize
    background-size cover
    background-image url('/icons/plus.png')
    border-radius 50%
    cursor pointer
    float left

#addIcon.active
    background-image url('/icons/plusActive.png')

#atCurrent
    width 42px
    height @width
    margin-right "calc(10px + %s / 2 - %s / 2)" % (addIconSize @width)
    margin-bottom 10px
    background-size cover
    background-image url('/icons/atCurrent.png')
    border-radius 50%
    cursor pointer
    transform: translateY(60px)
    float left
    opacity 0

#atCurrent.active
 	animation slideup 0.3s cubic-bezier(0.075, 0.82, 0.165, 1) both

#atCurrent.closing
 	animation slidedown 0.3s cubic-bezier(0.075, 0.82, 0.165, 1) both

.pac-container.show
    display block !important

.pac-user-item, .pac-item
    cursor pointer

.yAlign
    position relative
    top 50%
    transform translateY(-50%)

#userLogout
    margin-right 10px
    margin-top 10px

.subscription
    margin-left 10px

.hider
    background-color transparent
    width 50px
    height 50px
    position absolute
    top 0px
    left 0px
    border-radius 50%

.user.hidden
    .hider
        background-color rgba(0, 0, 0, 0.5)

.user
    @extends .noselect
    border-radius 50%
    background-color white
    width 50px
    height 50px
    cursor pointer
    margin-bottom 10px

    img
        border-radius 50%
        width 50px
        height 50px

.profileImageID
    width 50px
    height 50px
    font-size 24px
    color white
    text-transform uppercase
    text-align center
    line-height 50px
    border-radius 50%

.subscriptions
    height 100%
    width 0
    position fixed
    z-index -1
    top 0
    left 0
    background-color white
    overflow-x hidden
    transition 0.5s
    display inline-block
    margin-left 0px

.subscriptions.active
    width 408px

.subscriptions.closing
    margin-left -408px
    transition 0.5s

#hamburger
    background-color white
    height 48px
    width 48px
    margin 10px
    font-size 20pt
    text-align center
    line-height: 48px 
    cursor pointer
    box-shadow rgba(0,0,0,0.3) 0px 1px 4px -1px
    border-radius 2px
    @extends .noselect

.TopNav 
    display inline-block
    width 500px

#closebtn
    width 48px
    height 48px
    margin 10px
    float left
    font-size 36px
    text-align center
    line-height: 48px 

input:focus
    outline none

#subHeadding
    margin-bottom 15px
    margin-left 15px

#subHeadding:after
    content "" 
    display block 
    width 350px 
    padding-top 10px
    border-bottom 1px solid #DDD

.peopleOuter
    padding 25px

#NavSearch
    display inline-block
    left 68px
    float left
    margin-top 10px
    width 310px
    height 48px
    border none
    border-bottom 2px solid
    font-size 15pt
    line-height 1
    border-color #DDD
    border-radius 0px

.text
    display block
    margin-left 10px
    width 135px
    float left

.person
    width 100%
    height 80px
    
    .user
        float left
    
#Name
    font-size 14px
    line-height 2
    font-weight 600

#Number
    font-size 13px
    color #DDD

.subscribe
    display block
    cursor pointer
    float right

.subbtn
    background-color #D74D46
    border-radius 3px
    width 100px
    height 28px
    display inline-block
    @extends .noselect
    
.subbtn.active
    background-color #DDD
    border-radius 2px
    width 100px
    height 28px
    display inline-block

.buttonText
    text-align center
    margin-top auto
    margin-bottom auto
    color white
    weight 400
    font-size 12px
    line-height 28px

.settings 
    position relative
    bottom 0
    left 0
    z-index 2
    height 80px
    width 100%
    background-color white
    @media only screen and (min-width: 500px)
        width 408px

#logoutButton
    width 80px
    height 30px
    margin-top 20px
    margin-left auto
    margin-right auto
    border-radius 2px
    background-color themeblue
    text-align center
    box-shadow 0 1px 4px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)

.LogoutbuttonText
    text-align center
    margin-top auto
    margin-bottom auto
    color white
    weight 300
    font-size 16px
    line-height 30px

@keyframes slideup
    0%
        transform: translateY(60px)
        opacity 0
    100% 
        transform: translateY(0px)
        opacity 1

@keyframes slidedown
    0%
        transform: translateY(0px)
        opacity 1
    60%
        opacity 0
    100% 
        transform: translateY(60px)
