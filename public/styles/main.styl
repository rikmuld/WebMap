html, body
    margin 0

div, input
    box-sizing border-box

#map 
    height 100%
    width 100%
    position absolute
    top 0
    z-index -1

.mapElement
    background-color: white
    border-radius: 2px
    box-shadow: rgba(0, 0, 0, 0.3) 0px 1px 4px -1px

#myLocation
    @extends .mapElement

    width 28px
    height 28px
    margin-left: 10px
    cursor: pointer

    img
        width 22px
        height 22px
        margin 3px 0px 0px 3px
        object-fit cover
        object-position 0 0

#myLocation:hover
    img
        object-position 88.7% 0

#myLocation.error
    cursor default
    img
        object-position 11.04% 0

#searchbar
    @extends .mapElement

    width 392px
    height 48px
    margin-top 10px

    input, input:focus, input:active, input:hover
        width 100%
        height 100%
        border none
        outline none
        padding 10px
        font-size 15px
        font-family: Arial, Helvetica, sans-serif
        border-radius: inherit

addIconSize = 59px

#addIcon
    margin-right 10px
    margin-bottom 10px
    width addIconSize
    height addIconSize
    background-size cover
    background-image url('/icons/plus.png')
    border-radius 50%
    cursor pointer

#addIcon.active
    background-image url('/icons/plusActive.png')

#atCurrent
    width 42px
    height @width
    margin-right "calc(10px + %s / 2 - %s / 2)" % (addIconSize @width)
    margin-bottom 10px
    background-size cover
    background-image url('/icons/atCurrent.png')
    border-radius 50%
    cursor pointer
    display none

#atCurrent.active
    display block

.pac-container
    display block !important

.pac-container.hidden
    display none !important

.pac-user-item
    cursor pointer